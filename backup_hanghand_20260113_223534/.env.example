# Supabase Configuration (Example)
# Copy this file to .env.local and fill in your actual values

# Supabase Project Credentials
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Feature Flags
VITE_USE_MOCK_DATA=false  # Set to 'true' to use local mock data (for testing without backend)
VITE_ENABLE_AI_SEARCH=false  # Set to 'true' after deploying the Edge Function

# Pilot Node Configuration
VITE_DEFAULT_NODE=NODE_LEES  # Options: NODE_LEES, NODE_KANATA
VITE_AVAILABLE_NODES=NODE_LEES,NODE_KANATA

# Debug & Development
VITE_DEBUG_MODE=false  # Enable console logging for API calls
VITE_SHOW_DEV_TOOLS=false  # Show development UI helpers

# Optional: If using OpenAI for embeddings
# VITE_OPENAI_API_KEY=sk-...  # Not needed for client-side, Edge Function uses secrets

# Stripe Configuration (for Edge Functions)
# Note: These secrets are set via Supabase CLI, not in .env files
# Set via: supabase secrets set STRIPE_SECRET_KEY=sk_test_...
# Set via: supabase secrets set STRIPE_WEBHOOK_SECRET=whsec_...
# See: supabase/functions/README.md for deployment instructions
